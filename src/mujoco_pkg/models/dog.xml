<mujoco model="simple_box">
	<compiler angle="degree" coordinate="local"/>
	<option gravity="0 0 -9.81"/>
	
	<worldbody>
		<!-- 地板 -->
		<!-- friction="滑動摩擦 扭轉摩擦 滾動摩擦" -->
		<geom name="floor" type="plane" pos="0 0 0" size="10 10 0.1" rgba="10 10 10 0.3" friction="1 0.005 0.001"/>
		
		<!-- (dog) -->
		<body name="base" pos="0 0 2">
			<joint name="body" type="free"/>
			<geom type="box" density="10" size="2 0.5 0.5" rgba="0 0.5 1 1"/>
			
			<body name="left_arm" pos="-1 -0.61 0">
				<joint name="left_shoulder" type="hinge" pos="-0.9 0 0" axis="0 1 0" frictionloss="10"/>
				<geom type="box" density="10" size="1 0.1 0.1" rgba="1 0.5 0.5 1"/>
					
				<body name="left_hand" pos="0 -0.21 0">
					<joint name="left_elbow" type="hinge" pos="0.9 0 0" axis="0 1 0" frictionloss="10"/>
					<geom type="box" density="10" size="1 0.1 0.1" rgba="0.5 0.5 0.5 1" friction="0.1 0.002 0.0005"/>
				</body>	
			</body>
			
			<body name="right_arm" pos="-1 0.61 0">
				<joint name="right_shoulder" type="hinge" pos="-0.9 0 0" axis="0 1 0" frictionloss="10"/>
				<geom type="box" density="10" size="1 0.1 0.1" rgba="1 0.5 0.5 1"/>
					
				<body name="right_hand" pos="0 0.21 0">
					<joint name="right_elbow" type="hinge" pos="0.9 0 0" axis="0 1 0" frictionloss="10"/>
					<geom type="box" density="10" size="1 0.1 0.1" rgba="0.5 0.5 0.5 1" friction="0.1 0.002 0.0005"/>
				</body>	
			</body>
			
			<body name="left_leg" pos="2.8 -0.61 0">
				<joint name="left_hip" type="hinge" pos="-0.9 0 0" axis="0 1 0" frictionloss="10"/>
				<geom type="box" density="10" size="1 0.1 0.1" rgba="1 0.5 0.5 1"/>
					
				<body name="left_feet" pos="0 -0.21 0">
					<joint name="left_knee" type="hinge" pos="0.9 0 0" axis="0 1 0" frictionloss="10"/>
					<geom type="box" density="10" size="1 0.1 0.1" rgba="0.5 0.5 0.5 1" friction="0.1 0.002 0.0005"/>
				</body>	
			</body>
			
			<body name="right_leg" pos="2.8 0.61 0">
				<joint name="right_hip" type="hinge" pos="-0.9 0 0" axis="0 1 0" frictionloss="10"/>
				<geom type="box" density="10" size="1 0.1 0.1" rgba="1 0.5 0.5 1"/>
					
				<body name="right_feet" pos="0 0.21 0">
					<joint name="right_knee" type="hinge" pos="0.9 0 0" axis="0 1 0" frictionloss="10"/>
					<geom type="box" density="10" size="1 0.1 0.1" rgba="0.5 0.5 0.5 1" friction="0.1 0.002 0.0005"/>
				</body>	
			</body>
		</body>
	</worldbody>
	
	<actuator>
		<motor name="left_shoulder_motor" joint="left_shoulder" ctrlrange="-1000 1000"/>
		<motor name="left_elbow_motor" joint="left_elbow" ctrlrange="-1000 1000"/>
		
		<motor name="right_shoulder_motor" joint="right_shoulder" ctrlrange="-1000 1000"/>
		<motor name="right_elbow_motor" joint="right_elbow" ctrlrange="-1000 1000"/>
		
		<motor name="left_hip_motor" joint="left_hip" ctrlrange="-1000 1000"/>
		<motor name="left_knee_motor" joint="left_knee" ctrlrange="-1000 1000"/>
		
		<motor name="right_hip_motor" joint="right_hip" ctrlrange="-1000 1000"/>
		<motor name="right_knee_motor" joint="right_knee" ctrlrange="-1000 1000"/>
		
		<motor name="body_motor" joint="body" ctrlrange="-500 500"/>
	</actuator>
	
	<sensor>
		
		
	</sensor>
</mujoco>

